  "commands": {
    "triage": {
      "trigger": "/triage",
      "description": "Triage and label issues",
      "workflow": "lia-issue-automated-triage.yml"
    },
    "review": {
      "trigger": "/review",
      "description": "Review pull request code",
      "workflow": "lia-pr-review.yml"
    },
    "generate": {
      "trigger": "/generate [type] [name]",
      "description": "Generate code scaffolds",
      "workflow": "lia-code-generation.yml",
      "types": ["controller", "feature", "adapter", "test"]
    },
    "maintenance": {
      "trigger": "/maintenance",
      "description": "Run maintenance tasks",
      "workflow": "lia-automated-maintenance.yml"
    },
    "cli": {
      "trigger": "/cli",
      "description": "Interactive CLI assistance",
      "workflow": "lia-cli.yml"
    },
    "prompt": {
      "trigger": "/prompt [action] [name]",
      "description": "Manage automation prompts",
      "workflow": "lia-prompt-management.yml",
      "actions": ["create", "execute", "list", "optimize"]
    },
    "develop": {
      "trigger": "/develop [task]",
      "description": "Autonomous development tasks",
      "workflow": "lia-autonomous-development.yml",
      "tasks": [
        "create-adapter",
        "create-feature",
        "update-documentation",
        "optimize-performance",
        "refactor-code",
        "create-tests",
        "analyze-codebase"
      ]
    }
  },
  "integrations": {
    "github": {
      "workflows": [
        "claude.yml",
        "claude-enhanced.yml",
        "claude-code-lia-integrated.yml",
        "lia-autonomous-development.yml",
        "lia-prompt-management.yml"
      ],
      "triggers": [
        "issue_comment",
        "pull_request",
        "schedule",
        "workflow_dispatch"
      ]
    },
    "claude_code": {
      "personalities": [
        "@claude",
        "@claude-lia",
        "@claude-code"
      ],
      "model": "claude-3-opus-20240229",
      "max_tokens": 4096,
      "temperature": 0.7
    }
  },
  "automation": {
    "prompts_directory": ".github/prompts/",
    "scripts_directory": ".github/scripts/",
    "workflows_directory": ".github/workflows/",
    "templates_directory": ".github/ISSUE_TEMPLATE/"
  },
  "metrics": {
